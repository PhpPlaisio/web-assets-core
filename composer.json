{
  "name": "plaisio/web-assets-core",
  "description": "PhpPlaisio: Core Web Assets",
  "keywords": [
    "PhpPlaisio",
    "Web Assets",
    "Core"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "ext-json": "*",
    "plaisio/helper-html": "^4.2.0",
    "plaisio/helper-url": "^1.3.0",
    "plaisio/kernel": "^3.3.0",
    "plaisio/web-assets": "^3.2.0",
    "setbased/exception": "^2.6.0",
    "symfony/filesystem": "^6.0|^7.0"
  },
  "require-dev": {
    "phing/phing": "^3.0.1",
    "phpunit/phpunit": "^11.5.22",
    "plaisio/console-kernel": "^1.0.0",
    "plaisio/dirs-core": "^1.3.0"
  },
  "autoload": {
    "psr-4": {
      "Plaisio\\WebAssets\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Plaisio\\WebAssets\\Test\\": "test/"
    }
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "allow-plugins": {
      "phing/phing-composer-configurator": true
    }
  }
}
